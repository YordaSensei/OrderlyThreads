<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f6f6f6">

    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Production Tracker"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/navBarBg"
        android:layout_width="442dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerItems"
        app:srcCompat="@drawable/navbar" />

    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="363dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="25dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sectionTitle">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="97dp"
            android:layout_height="24dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Not Started"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Cutting"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="16dp"
            android:layout_marginStart="13dp" />

        <TextView
            android:id="@+id/tab3"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Sewing"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="16dp"
            android:layout_marginStart="13dp"/>

        <TextView
            android:id="@+id/tab4"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Finishing"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="16dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/navBarBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabsContainer"
        tools:listitem="@layout/production_item" />

</androidx.constraintlayout.widget.ConstraintLayout>