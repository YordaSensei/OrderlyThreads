<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_Stock_Check">

    <!-- TITLE -->
    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Stock Check"
        android:textSize="28sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/league_spartan_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Navigation -->
    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/sectionTitle">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Pending Approval"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="14sp"
            android:layout_marginEnd="40dp"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Approved"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="14sp"
            android:layout_marginEnd="40dp"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- RecyclerView for Orders -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ordersRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tabsContainer"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>