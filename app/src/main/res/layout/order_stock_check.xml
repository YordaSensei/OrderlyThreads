<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_Stock_Check">

    <!-- TITLE -->
    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Stock Check"
        android:textSize="28sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/league_spartan_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Navigation -->
    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/sectionTitle">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Pending Approval"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Approved"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="14sp" />
    </LinearLayout>

<!--    Order Check-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/bg_default_white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tabsContainer">

        <!-- Shirt Image -->
        <ImageView
            android:id="@+id/orderShirtImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start|top"
            android:background="@drawable/bg_rounded"
            android:contentDescription="Shirt Image"
            android:scaleType="centerCrop"
            android:src="@drawable/img_merino" />

        <!-- Status top-right -->
        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="#FFC107"
            android:text="Pending Approval"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="@font/dm_sans_bold" />

        <!-- Details container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start|top"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="50dp"> <!-- leave space for button -->

            <!-- Name -->
            <TextView
                android:id="@+id/orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="16sp"
                android:fontFamily="@font/dm_sans_bold"
                android:textColor="@android:color/black" />

            <!-- Date & Time -->
            <TextView
                android:id="@+id/orderDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November 22 - 9 AM"
                android:textSize="12sp"
                android:textColor="#FFC107"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/dm_sans_medium" />

            <!-- Custom Order Label -->
            <TextView
                android:id="@+id/orderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Order"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/dm_sans_medium" />

        </LinearLayout>

        <!-- Verify Stock Button -->
        <TextView
            android:id="@+id/verifyStockButton"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="#434143"
            android:text="Verify Stock"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>