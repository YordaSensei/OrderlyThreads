<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/info_window"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:background="@drawable/white_background"/>

    <TextView
        android:id="@+id/txtNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Full Name"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/info_window"
        app:layout_constraintTop_toTopOf="@+id/info_window" />

    <TextView
        android:id="@+id/txtNameInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="User 1"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/info_window"
        app:layout_constraintTop_toTopOf="@+id/txtNameLabel" />

    <TextView
        android:id="@+id/txtEmailLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Email Address"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/info_window"
        app:layout_constraintTop_toTopOf="@+id/txtNameInfo" />

    <TextView
        android:id="@+id/txtEmailInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="User Email"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/info_window"
        app:layout_constraintTop_toTopOf="@+id/txtEmailLabel" />

    <TextView
        android:id="@+id/txtPasswordLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Password"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/info_window"
        app:layout_constraintTop_toTopOf="@+id/txtEmailInfo" />

    <TextView
        android:id="@+id/txtPasswordInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="User Password"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/info_window"
        app:layout_constraintTop_toTopOf="@+id/txtPasswordLabel" />

    <TextView
        android:id="@+id/txtPositionLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Position"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/info_window"
        app:layout_constraintTop_toTopOf="@+id/txtPasswordInfo" />

    <TextView
        android:id="@+id/txtPositionInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="User Position"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/info_window"
        app:layout_constraintTop_toTopOf="@+id/txtPositionLabel" />

    <Button
        android:id="@+id/updateAccBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="UPDATE"
        app:backgroundTint="#004aad"
        app:layout_constraintBottom_toBottomOf="@+id/info_window"
        app:layout_constraintStart_toStartOf="@id/info_window"
        app:layout_constraintTop_toTopOf="@id/txtPositionInfo" />

    <Button
        android:id="@+id/deleteAccBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="DELETE"
        app:backgroundTint="#a52b31"
        app:layout_constraintBottom_toBottomOf="@+id/info_window"
        app:layout_constraintEnd_toEndOf="@id/info_window"
        app:layout_constraintTop_toTopOf="@id/txtPositionInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>