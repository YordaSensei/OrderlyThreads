<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded">

    <!-- Background Card -->
    <View
        android:id="@+id/view3"
        android:layout_width="310dp"
        android:layout_height="220dp"
        android:background="@drawable/bg_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Green Header Background -->
    <View
        android:id="@+id/view"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:background="@drawable/red_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Green Header Bottom Part -->
    <View
        android:id="@+id/view2"
        android:layout_width="310dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Delete Account"
        android:textColor="@color/white"
        android:textSize="33sp"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view" />

    <!-- Confirmation Message -->
    <TextView
        android:id="@+id/delete_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Are you sure you want to delete this account?"
        android:textSize="16sp"
        android:fontFamily="@font/dm_sans_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <!-- Yes Button -->
    <Button
        android:id="@+id/btn_delete_yes"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/red_outline"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Yes"
        android:textColor="#FF0000"
        android:textSize="17sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@id/btn_delete_no"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_message" />

    <!-- No Button -->
    <Button
        android:id="@+id/btn_delete_no"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/black_outline"
        android:fontFamily="@font/dm_sans_bold"
        android:text="No"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_delete_yes"
        app:layout_constraintTop_toTopOf="@id/btn_delete_yes" />

</androidx.constraintlayout.widget.ConstraintLayout>