<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Approve_Order_Check">

    <!-- BACK BUTTON CONTAINER -->
    <FrameLayout
        android:id="@+id/backContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_rounded"
            android:textSize="10sp"
            app:backgroundTint="@null" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back"
            app:tint="#0f4162" />
    </FrameLayout>

    <!-- PAGE TITLE -->
    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Order Stock Check"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/backContainer"
        app:layout_constraintStart_toEndOf="@id/backContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <!-- ORDER ITEM CONTAINER -->
    <FrameLayout
        android:id="@+id/orderContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/sectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- SHIRT IMAGE -->
        <ImageView
            android:id="@+id/orderShirtImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/bg_rounded"
            android:src="@drawable/img_cashmere"/>

        <!-- DETAILS CONTAINER -->
        <LinearLayout
            android:id="@+id/orderDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start|top"
            android:layout_marginStart="110dp">

            <!-- ORDER NAME -->
            <TextView
                android:id="@+id/orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/dm_sans_bold" />

            <!-- CALENDAR + DATE -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/orderDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="November 22 - 9 AM"
                    android:textSize="19sp"
                    android:textColor="#ADC3E1"
                    android:fontFamily="@font/dm_sans_medium" />
            </LinearLayout>

            <!-- ORDER LABEL -->
            <TextView
                android:id="@+id/orderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Order"
                android:textSize="17sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/dm_sans_medium"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/orderDetails"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderContainer">

        <ImageView
            android:id="@+id/grayOutline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/grayoutline" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <!-- COLUMN 1: TITLES  -->
            <LinearLayout
                android:id="@+id/categoryTitles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/orderDeetsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/dm_sans_extrabold"
                    android:text="Order Details"
                    android:textColor="#8f8f8f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/orderDeetsTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Order ID"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/orderDeetsTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Garment Type"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/orderDeetsTitle6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Fabric Type"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/orderDeetsTitle7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Color or Pattern"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/orderDeetsTitle8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Design Notes"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- COLUMN 2: DASHES (Weight 1) -->
            <LinearLayout
                android:id="@+id/dashes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Top margin adjusted to align with "Order ID" row -->
                <TextView
                    android:id="@+id/dash1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="-"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/dash2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="-"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/dash3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="-"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/dash4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="-"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/dash5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="-"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- COLUMN 3: VARIABLES (Weight 3.5) -->
            <LinearLayout
                android:id="@+id/variables"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="vertical">

                <!-- Top margin adjusted to align with "Order ID" row -->
                <TextView
                    android:id="@+id/orderIdVar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="OD123"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/garmentVar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Shirt"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/fabricVar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Cotton"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/cpVar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Plaid"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/notesVar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="None"
                    android:textColor="#8f8f8f"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- Materials Section-->
    <TextView
        android:id="@+id/materialTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Materials Needed"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/orderMaterialHeader"
        app:layout_constraintTop_toBottomOf="@id/orderDetails" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/orderMaterialHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialTitle">

        <TextView
            android:id="@+id/orderMaterials1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_extrabold"
            android:text="Category"
            android:textColor="#8f8f8f"
            android:textSize="15sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/orderMaterials2Title"/>

        <TextView
            android:id="@+id/orderMaterials2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_extrabold"
            android:text="Material"
            android:textColor="#8f8f8f"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/orderMaterials3Title"
            app:layout_constraintStart_toEndOf="@+id/orderMaterials1Title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/orderMaterials3Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_extrabold"
            android:text="Stock"
            android:textColor="#8f8f8f"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/orderMaterials2Title"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Grey Line-->
    <ImageView
        android:id="@+id/grayLine"
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintEnd_toEndOf="@id/orderMaterialHeader"
        app:layout_constraintStart_toStartOf="@id/orderMaterialHeader"
        app:layout_constraintTop_toBottomOf="@id/orderMaterialHeader"
        app:srcCompat="@drawable/grayoutline" />

    <LinearLayout
        android:id="@+id/materialsList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/orderMaterialHeader"
        app:layout_constraintStart_toStartOf="@id/orderMaterialHeader"
        app:layout_constraintTop_toBottomOf="@id/grayLine">

        <!-- Sufficient Stock Example -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category_sufficient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fabric"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/material_sufficient"
                />

            <TextView
                android:id="@+id/material_sufficient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cotton"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/category_sufficient"
                app:layout_constraintEnd_toStartOf="@+id/stock_sufficient"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/stock_sufficient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 yards"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/material_sufficient"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Low Stock Example -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/category_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thread"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/material_low"
                />

            <TextView
                android:id="@+id/material_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="White"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/category_low"
                app:layout_constraintEnd_toStartOf="@+id/stock_low"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/stock_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 spools"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/material_low"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/verifyStockButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="@android:color/holo_green_dark"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Approve"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rejectButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="@android:color/holo_red_dark"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Reject"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
