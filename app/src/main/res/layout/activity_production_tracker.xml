<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductionTracker">

    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Production Tracker"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrow_back"
        android:background="@null"
        android:backgroundTint="@null"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@+id/sectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/clientInfoFrame"
        android:layout_width="380dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@+id/sectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginStart="13dp"
        >

        <ImageView
            android:id="@+id/garmentContainer"
            android:layout_width="130dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/white_background"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/clientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Name"
            android:textSize="18dp"
            android:fontFamily="@font/dm_sans_extrabold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="180dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginStart="180dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="#004aad"
                app:srcCompat="@drawable/calendar_icon" />

            <TextView
                android:id="@+id/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/dm_sans"
                android:text="January 1 - 00:00 AM"
                android:textColor="#004aad"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="78dp"
            android:fontFamily="@font/dm_sans"
            android:text="Custom Order"
            android:textColor="#8f8f8f"
            android:textSize="17sp" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/orderDetails"
        android:layout_width="350dp"
        android:layout_height="230dp"
        app:layout_constraintTop_toBottomOf="@+id/clientInfoFrame"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp">

        <ImageView
            android:id="@+id/grayOutline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/grayoutline" />

        <LinearLayout
            android:id="@+id/categoryTitles"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderDeetsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/dm_sans_extrabold"
                android:text="Order Details"
                android:textColor="#8f8f8f"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/orderDeetsTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Order ID"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orderDeetsTitle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Garment Type"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orderDeetsTitle6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Fabric Type"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orderDeetsTitle7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Color or Pattern"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orderDeetsTitle8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Design Notes"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashes"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="170dp">

            <TextView
                android:id="@+id/dash1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="53dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="-"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dash2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="-"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dash3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="-"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dash4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="-"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dash5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="-"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/variables"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="230dp">

            <TextView
                android:id="@+id/orderIdVar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="OD123"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/garmentVar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Shirt"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fabricVar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Cotton"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cpVar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="White"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dnVar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Boxy"
                android:textColor="#8f8f8f"
                android:textSize="15sp" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="330dp"
        android:layout_height="1.5dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        app:srcCompat="@drawable/verydarkgray_background"
        app:layout_constraintTop_toBottomOf="@+id/orderDetails"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/orderStatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/league_spartan_extrabold"
        android:text="Order Status"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <LinearLayout
        android:id="@+id/processImages"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderStatusTitle">


        <ImageView
            android:id="@+id/hourglassIcon"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"

            app:srcCompat="@drawable/hourglass_icon" />

        <ImageView
            android:id="@+id/cuttingIcon"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            app:srcCompat="@drawable/scissor_icon" />

        <ImageView
            android:id="@+id/sewingIcon"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            app:srcCompat="@drawable/sewing_icon" />

        <ImageView
            android:id="@+id/checkIcon"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            app:srcCompat="@drawable/check_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/processLabel"
        android:layout_width="370dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processImages">


        <TextView
            android:id="@+id/hourglassTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/dm_sans_extrabold"
            android:text="Pending"
            android:layout_marginStart="17dp"/>

        <TextView
            android:id="@+id/cuttingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/dm_sans_extrabold"
            android:text="Cutting"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sewingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/dm_sans_extrabold"
            android:text="Sewing"
            android:layout_marginStart="40dp"/>

        <TextView
            android:id="@+id/finishingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/dm_sans_extrabold"
            android:text="Finishing"
            android:layout_marginStart="40dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/updateTitle"
        android:layout_width="125dp"
        android:layout_height="27dp"
        android:text="Update Status"
        android:fontFamily="@font/league_spartan_extrabold"
        android:textSize="18dp"
        android:textColor="#004aad"
        android:layout_marginStart="38dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/processLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinnerProcess"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/blue_outline"
        android:spinnerMode="dropdown"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toBottomOf="@+id/updateTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Update Order"
        android:fontFamily="@font/dm_sans_extrabold"
        android:textSize="22dp"
        android:background="@drawable/green_background"
        app:backgroundTint="@null"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>