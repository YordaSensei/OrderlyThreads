<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded">

    <!-- Background Card -->
    <View
        android:id="@+id/view3"
        android:layout_width="310dp"
        android:layout_height="220dp"
        android:background="@drawable/bg_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Green Header Background -->
    <View
        android:id="@+id/view"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:background="@drawable/red_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Green Header Bottom Part -->
    <View
        android:id="@+id/view2"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@drawable/red_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specify Low-stock Item"
        android:fontFamily="@font/league_spartan_extrabold"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view" />

    <!-- Reason for Rejecting Label -->
    <TextView
        android:id="@+id/labelRejectReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reason for Rejecting"
        android:fontFamily="@font/dm_sans_bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />
    
    <!-- Reject Reason Spinner -->
    <Spinner
        android:id="@+id/spinnerRejectReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelRejectReason" />

    <!-- Low-Stock Item Label -->
    <TextView
        android:id="@+id/labelRejectMaterial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Low-Stock Item"
        android:fontFamily="@font/dm_sans_bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerRejectReason" />
    
    <!-- Low-Stock Item Spinner -->
    <Spinner
        android:id="@+id/spinnerRejectMaterial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelRejectMaterial" />

    <!-- Yes Button -->
    <Button
        android:id="@+id/rejectConfirmButton"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Reject"
        android:textColor="#FF0000"
        android:fontFamily="@font/dm_sans_bold"
        android:textSize="17sp"
        android:background="@drawable/red_outline"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancelButton"
        app:layout_constraintTop_toBottomOf="@id/spinnerRejectMaterial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <!-- No Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:textColor="@color/black"
        android:fontFamily="@font/dm_sans_bold"
        android:textSize="17sp"
        android:background="@drawable/black_outline"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toEndOf="@id/rejectConfirmButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerRejectMaterial"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>