<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory">

    <!-- TITLE -->
    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textSize="28sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/league_spartan_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!-- ADD BUTTON (rightmost) -->
    <FrameLayout
        android:id="@+id/addButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_default_white"
        android:padding="8dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintTop_toTopOf="@id/sectionTitle"
        app:layout_constraintBottom_toBottomOf="@id/sectionTitle"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_plus"/>
    </FrameLayout>


    <!-- SEARCH BAR  -->
    <FrameLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_default_white"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/sectionTitle"
        app:layout_constraintBottom_toBottomOf="@id/sectionTitle"
        app:layout_constraintStart_toEndOf="@id/sectionTitle"
        app:layout_constraintEnd_toStartOf="@id/addButton">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_search"/>
    </FrameLayout>

    <!--    Category Navigation-->
    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/sectionTitle"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="65dp">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Fabric"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="12sp"
            android:layout_marginStart="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Color/Pattern"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tab3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Basic Materials"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tab4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Accents"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inventoryRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:itemCount="6"
        tools:listitem="@layout/item_inventory_card"
        app:layout_constraintTop_toBottomOf="@id/tabsContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>