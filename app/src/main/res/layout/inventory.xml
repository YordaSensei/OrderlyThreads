<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Inventory"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />
    
<!--     SEARCH BAR -->
    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_search_bar"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="27dp"
        tools:ignore="MissingConstraints">

        <!-- Magnifying Glass Icon -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_search" />

    </FrameLayout>

<!--    ADD BUTTON -->
    <FrameLayout
        android:id="@+id/addButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_search_bar"
        android:padding="5dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="374dp"
        tools:layout_editor_absoluteY="27dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_plus" />
    </FrameLayout>

<!--    Category Navigation-->
    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="363dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="68dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="97dp"
            android:layout_height="24dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Fabric"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tab2"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:layout_marginStart="13dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Cutting"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tab3"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_marginStart="13dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Sewing"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tab4"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/btn_topbuttons"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dm_sans_extrabold"
            android:gravity="center"
            android:text="Finishing"
            android:textColor="@color/font_colorstate_graytowhite"
            android:textSize="16dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>