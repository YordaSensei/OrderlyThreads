<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/white" />

    <!-- Border -->
    <stroke
        android:width="0.6dp"
        android:color="@color/black" />

    <!-- Rounded corners -->
    <corners android:radius="30dp" />

    <!-- Optional padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
